#!/bin/bash
cmake_args+=("-DCMAKE_BUILD_TYPE=Release")
cmake_args+=("-DSeacas_ENABLE_Fortran=OFF")
cmake_args+=("-DSeacas_ENABLE_Kokkos=OFF")
cmake_args+=("-DSeacas_ENABLE_Zoltan=OFF")
cmake_args+=("-DSeacas_ENABLE_SEACASExodus=ON")
cmake_args+=("-DSeacas_ENABLE_SEACASAprepro=ON")
cmake_args+=("-DNetcdf_LIBRARY_DIRS=$netcdf_install/lib")
cmake_args+=("-DNetcdf_INCLUDE_DIRS=$netcdf_install/include")
cmake_args+=("-DBUILD_SHARED_LIBS=ON")
cmake_args+=("-DSEACASExodus_ENABLE_STATIC=OFF")
cmake_args+=("-DTPL_ENABLE_HDF5=ON")
cmake_args+=("-DSEACASExodus_ENABLE_HDF5=ON")
cmake_args+=("-DHDF5_LIBRARY_NAMES=hdf5-shared\;hdf5_hl-shared")
cmake_args+=("-DHDF5_LIBRARY_DIRS=$hdf5_install/lib")
cmake_args+=("-DHDF5_INCLUDE_DIRS=$hdf5_install/include")
export MPI=OFF
