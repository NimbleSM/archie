#!/bin/bash
cmake_args+=("-DCMAKE_BUILD_TYPE=Release")
cmake_args+=("-DBUILD_SHARED_LIBS=ON")
cmake_args+=("-DBUILD_UTILITIES=OFF")
cmake_args+=("-DENABLE_DISKLESS=OFF")
cmake_args+=("-DENABLE_HDF4=OFF")
cmake_args+=("-DENABLE_NETCDF_4=ON")
cmake_args+=("-DENABLE_DAP=OFF")
cmake_args+=("-DENABLE_PARALLEL4=OFF")
cmake_args+=("-DENABLE_PNETCDF=OFF")
cmake_args+=("-DENABLE_TESTS=OFF")
cmake_args+=("-DHDF5_ROOT=$hdf5_install")
