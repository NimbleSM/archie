cmake_args+=("-DARBORX_ENABLE_BENCHMARKS=OFF")
cmake_args+=("-DARBORX_ENABLE_MPI=OFF")
cmake_args+=("-DARBORX_ENABLE_EXAMPLES=OFF")
cmake_args+=("-DARBORX_ENABLE_TESTS=OFF")
