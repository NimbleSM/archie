#!/bin/bash
cmake_args+=("-DCMAKE_CXX_FLAGS=\"-O3\"")
cmake_args+=("-DCMAKE_C_FLAGS=\"-O3\"")
cmake_args+=("-DHDF5_BUILD_FORTRAN=OFF")
cmake_args+=("-DHDF5_BUILD_CPP_LIB=OFF")
cmake_args+=("-DHDF5_ENABLE_PARALLEL=OFF")
cmake_args+=("-DBUILD_SHARED_LIBS=ON")
cmake_args+=("-DBUILD_TESTING=OFF")
cmake_args+=("-Wno-dev")
